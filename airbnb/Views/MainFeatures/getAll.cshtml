                                                <label for="bathRoomNum6">6</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <div class="mt-3">
                                    <h5>Property type</h5>
                                    <div class="mt-3 d-flex">
                                        <div class="mb-3">
                                            <div class="type">
                                                <input type="radio" id="type1" name="type" value="House" checked>
                                                <label for="type1">House</label>
                                            </div>
                                            <div class="type">
                                                <input type="radio" id="type2" name="type" value="Apartment">
                                                <label for="type2">Apartment</label>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="type">
                                                <input type="radio" id="type3" name="type" value="Hotel">
                                                <label for="type3">Hotel</label>
                                            </div>
                                            <div class="type">
                                                <input type="radio" id="type4" name="type" value="Villa">
                                                <label for="type4">Villa</label>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="type">
                                                <input type="radio" id="type5" name="type" value="Chalet">
                                                <label for="type5">Chalet</label>
                                            </div>
