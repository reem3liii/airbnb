@model List<BookingViewModel>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="my-4">
    @foreach(var item in Model)
    {
        <div class="d-flex flex-row justify-content-between">

            <div style="width:45%">
                <iframe class="m-2" src="@item.Map" width="100%" height="300px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <div class="d-flex flex-column justify-content-center m-2 ms-5" style="width:55%">

                <h5>Location: @item.Location </h5>
                <h5>Start Date: @item.StartDate.ToShortDateString()</h5>
                <h5>End Date: @item.EndDate.ToShortDateString()</h5>
                <h5> @item.DailyPrice EGP per night × @item.GuestsNumber guests </h5>
                <hr/>
                <h6>Description: @item.Description </h6>
                <h6>Place info: @item.Type with @item.BedroomNumber bedroom, @item.BedNumber bed, @item.BathroomNumber bathroom </h6>


                <button type="button" class="btn btn-outline-danger fw-bold mx-auto mt-3 w-25" data-bs-toggle="modal" data-bs-target="#img-grid-@item.PlaceId">
                    Show photos
                </button>

                <div class="modal fade w-100" id="img-grid-@item.PlaceId" tabindex="-1" aria-labelledby="imgModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                @foreach (var img in item.Images)
                                {
                                    <img src="@img" width="100%" class="my-1" />
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            
            </div>
           
        
        </div>

     
    <hr />
    }
    
</div>
